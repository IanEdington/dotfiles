#!/bin/bash

# linking files
dotfiles::symlink_files ~/.dotfiles/vim ~/.vim
dotfiles::symlink_files ~/.vim/vimrc ~/.vimrc
dotfiles::symlink_files ~/.vim/editorconfig ~/.editorconfig

echo "make sure vundle is up to date"
dotfiles::install_from_github git@github.com:VundleVim/Vundle.vim.git ~/.vim/bundle/vundle

echo "installing vundles"
vim +PluginInstall +qall

# additional Plugin Requirments
# plugin cache, used by YankRing
mkdir -p ~/.cache/vim/plugin
# compile youcompleteme
xcode-select --install
cd ~/.vim/bundle/YouCompleteMe
./install.py --clang-completer --omnisharp-completer --gocode-completer --tern-completer
