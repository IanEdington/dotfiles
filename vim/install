#!/bin/bash

# linking files
dotfiles::symlink_files ~/.dotfiles/vim ~/.vim
dotfiles::symlink_files ~/.vimrc ~/.vim/vimrc

echo "make sure vundle is up to date"
# git submodule update --remote --recursive;
git clone --depth 1 git@github.com:VundleVim/Vundle.vim.git ~/.vim/bundle/vundle

echo "installing vundles"
# vim --noplugin -u ~/.vim/vundles.vim -N "+set hidden" "+syntax on" +BundleClean +BundleInstall! +qall
vim --noplugin -u ~/.vim/vundles.vim -N "+set hidden" "+syntax on" +BundleClean! +BundleInstall +qall
