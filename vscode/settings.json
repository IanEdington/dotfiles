{
  "window.title": "${rootName}",
  "editor.lineNumbers": "relative",
  "editor.fontSize": 20,
  "editor.fontFamily": "Jetbrains Mono,OperatorMono Nerd Font, Menlo, Monaco, 'Courier New', monospace",
  "editor.minimap.enabled": false,
  "vim.leader": ";",
  "vim.easymotion": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "[",
        "c"
      ],
      "commands": [
        {
          "command": "workbench.action.editor.previousChange"
        }
      ]
    },
    {
      "before": [
        "]",
        "c"
      ],
      "commands": [
        {
          "command": "workbench.action.editor.nextChange"
        }
      ]
    },
    {
      "before": [
        "g",
        "w",
        "h"
      ],
      "commands": [
        {
          "command": "workbench.action.focusPreviousGroup"
        }
      ]
    },
    {
      "before": [
        "g",
        "w",
        "l"
      ],
      "commands": [
        {
          "command": "workbench.action.focusNextGroup"
        }
      ]
    },
    {
      // git-gutter hunk undo
      "before": ["<leader>", "h", "u"],
      "commands": [{ "command": "git.revertSelectedRanges" }]
    },
    {
      "before": [
        "c",
        "o",
        "w"
      ],
      "commands": [
        {
          "command": "editor.action.toggleWordWrap"
        }
      ]
    },
    {
      "before": [
        "c",
        "o",
        "k"
      ],
      "after": [],
      "commands": [
        {
          "command": "settings.cycle.colorTheme",
        }
      ]
    },
    {
      "before": [
        "c",
        "o",
        "h"
      ],
      "commands": [
        {
          "command": ":nohl"
        }
      ]
    },
    {
      "before": [
        "<leader>", "f", "m"
      ],
      "commands": [
        {
          "command": "editor.action.formatDocument",
        }
      ]
    },
    {
      "before": ["<leader>", "x"],
      "after": ["\"", "+", "Y", "d", "d"]
    },
    {
      "before": ["<leader>", "c"],
      "after": ["\"", "+", "Y"]
    },
    {
      "before": ["<leader>", "v"],
      "after": ["\"", "+", "]", "p"]
    },
    {
      "before": ["<leader>", "V"],
      "after": ["\"", "+", "]", "P"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "x"],
      "after": ["\"", "+", "y", "g", "v", "d"]
    },
    {
      "before": ["<leader>", "c"],
      "after": ["\"", "+", "y"]
    },
    {
      "before": ["<leader>", "v"],
      "after": ["d", "\"", "+", "]", "p"]
    },
    {
      "before": ["<leader>", "V"],
      "after": ["d", "\"", "+", "]", "P"]
    }
  ],
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "x"],
      "after": ["<esc>", "\"", "+", "Y", "d", "d", "i"]
    },
    {
      "before": ["<leader>", "c"],
      "after": ["<esc>", "\"", "+", "Y", "a"]
    },
    {
      "before": ["<leader>", "v"],
      "after": ["<esc>", "\"", "+", "]", "p", "a"]
    },
    {
      "before": ["<leader>", "V"],
      "after": ["<esc>", "\"", "+", "]", "P", "a"]
    }
  ],
  "settings.cycle": [
    {
      "id": "colorTheme",
      "values": [
        {
          "workbench.colorTheme": "Solarized Dark",
        },
        {
          "workbench.colorTheme": "Solarized Light",
        }
      ]
    }
  ],
  "explorer.confirmDelete": false,
  "jest.autoEnable": false,
  "editor.codeActionsOnSave": {},
  "auto-close-tag.fullMode": true,
  "editor.guides.indentation": false,
  "terminal.external.linuxExec": "xterm-256color",
  "terminal.integrated.copyOnSelection": true,
  "workbench.colorTheme": "Solarized Dark",
  "accessibility.signals.terminalBell": {
    "sound": "on"
  },
  "terminal.integrated.enableVisualBell": true,
  "files.autoSave": "afterDelay",
  "chat.experimental.implicitContext": true,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "php.suggest.basic": true,
  "php.validate.enable": true,
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "openInGitHub.alwaysUseDefaultBranch": true,
  "update.mode": "none",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
}
