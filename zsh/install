# download prezto
dotfiles::install_from_github git@github.com:sorin-ionescu/prezto.git prezto

dotfiles::symlink_files ~/.dotfiles/zsh/prezto ~/.zprezto

# setopt EXTENDED_GLOB
for file in ~/.zprezto/runcoms/*; do
    rcfile=~/.${file##*/}
    if [[ ! "$rcfile" -ef ~/.README.md ]]; then
        dotfiles::symlink_files $file $rcfile
    fi
done

dotfiles::symlink_files ~/.dotfiles/zsh/zshrc ~/.zshrc
